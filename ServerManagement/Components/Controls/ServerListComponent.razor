@inject IServersRepository ServersRepository

@if(servers is not null && servers.Count > 0)
{
    <ul class="list-unstyled">
        <Virtualize Items="servers" Context="server">
            <ServerComponent Server="server"/>
        </Virtualize>

    </ul>
}
@code {
    [Parameter]
    public string? CityName { get; set; }

    private string? serversFilter;

    private List<Server> servers = new();

    [Parameter]
    public string? ServerFilter { get; set; }


    protected override void OnParametersSet()
    {
        if(!string.IsNullOrWhiteSpace(CityName))
        {
            servers = ServersRepository.GetServersByCity(CityName ?? "Toronto");
        }
        else if (!string.IsNullOrEmpty(ServerFilter))
        {
            servers = ServersRepository.SearchServers(ServerFilter);
        }
      
    }
}
